<div class="container">
  <div class="card-large row morty-description bg-light shadow p-3 mb-5 bg-white rounded justify-content-center mt-5">
    <h1 class="header-shadow">Add my Morty</h1>
    <div class="col-sm-offset-2 col-sm-8 my-2">
      <h3 class="py-2">Leave a review to <%= @morty.name %></h3>
      <%= simple_form_for [@morty, @review] do |f| %>
        <%= f.input :rating, collection: 0..5 %>
        <%= f.input :description %>
        <div class="text-center">
          <%= f.submit class: "btn btn-flat"%>
        </div>
      <% end %>
    </div>
  </div>
</div>