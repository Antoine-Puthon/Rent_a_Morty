<div class="container">
  <div class="row morty-description bg-light shadow p-3 mb-5 bg-white rounded">
    <div class="col-sm-offset-2 col-sm-8">
      <h1 class="header-shadow">Add my Morty</h1>
      <h3>Leave a review to <%= @morty.name %></h3>

      <%= simple_form_for [@morty, @review] do |f| %>
      <%= f.input :rating, collection: 0..5 %>
      <%= f.input :description %>
      <%= f.submit class: "btn btn-primary"%>
      <% end %>
    </div>
  </div>
</div>
